                                    <a asp-action="MarkComplete" asp-route-id="@t.TaskId" class="btn btn-success btn-sm" onclick="return confirm('Mark this task as completed?')">Complete</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quadrant III -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">Quadrant III: Urgent &amp; Not Important</h5>
                </div>
                <div class="card-body">
